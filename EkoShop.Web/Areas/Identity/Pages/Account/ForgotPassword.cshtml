@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
    <div class="container-fluid search-background">
        <h2 class="text-center text-primary">@ViewData["Title"]</h2>
        <hr />
        <div class="row">
            <div class="col-md-4">

            </div>
            <div class="col-md-4">
               
                <div class="login-form pt-4">

                 <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <h4 class="text-primary">Enter Your Email...</h4>
                            <label asp-for="Input.Email" class="text-primary"></label>
                            <input asp-for="Input.Email" class="form-control" placeholder="Enter your Email..." />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
            <div class="col-md-4">

            </div>
        </div>
        </div>
        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
