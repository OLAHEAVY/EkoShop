@model EkoShop.Models.Category
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">
    <div class="border backgroundWhite search-background">

        <div class="row">

            <div class="col-6">
                <h2 class="text-primary">Post List</h2>

            </div>

            <div class="col-6 text-right">
                <a asp-action="Upsert" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp; Create New Post</a>
            </div>

        </div>

        <br />
        <br />

        <table id="tblData" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Category</th>
                    <th>CreatedOn</th>
                    <th>ModidfiedOn</th>
                    <th></th>
                </tr>
            </thead>
        </table>

    </div>
</div>

@section Scripts {
    <script src="~/js/blog.js"></script>
}
