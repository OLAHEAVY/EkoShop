@model EkoShop.Models.Post

    <div class="container">
        <div class="row">
            <div class="col-lg-2">

            </div>
            <div class="col-lg-8 single-content">

                <p class="mb-5">
                    @{
                        var base64 = Convert.ToBase64String(Model.Picture);
                        var imgSrc = string.Format("data:image/jpg;base64,{0}", base64);

                    }
                    <img src="@imgSrc" alt="Image" class="img-fluid">
                </p>
                <h1 class="mb-4">
                    @Model.Title
                </h1>
                <div class="post-meta d-flex mb-5">

                    <div class="vcard">

                        <span class="date-read">@Model.CreatedOn <span class="mx-1">&bullet;</span>@Model.Category <span class="icon-star2"></span></span>
                    </div>
                </div>

                @Html.Raw(Model.Content)

            </div>
            <div class="col-lg-2">

            </div>
            <div class="col-8 offset-2" style="margin-bottom:10px;">
               
                    <div class="row">

                        <div class="col">
                            <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                        </div>
                    </div>
             
            </div>
        </div>

    </div>
